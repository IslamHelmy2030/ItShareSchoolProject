@model IClassRoomDto

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ClassRoomId" hidden="hidden" />
            
            <div class="form-group">
                <label asp-for="ClassRoomName" class="control-label"></label>
                <input asp-for="ClassRoomName" class="form-control" />
                <span asp-validation-for="ClassRoomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LevelId" class="control-label"></label>
                @Html.DropDownListFor(model=>model.LevelId,ViewBag.Levels as List<SelectListItem>,"-- Select --",new{ @class = "form-control" })
                <span asp-validation-for="LevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
